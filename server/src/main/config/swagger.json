{
  "openapi": "3.0.1",
  "info": {
    "title": "SpaceX API",
    "version": "1.0.0"
  },
  "schemes": ["http"],
  "servers": [{ "url": "http://localhost:5000/api/v1" }],
  "paths": {
    "/health-check": {
      "get": {
        "tags": ["Health Check"],
        "summary": "check the health of the server",
        "description": "This endpoint is used to check the health of the server",
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "type": "object",
                  "properties": {
                    "status": {
                      "type": "string",
                      "example": "ok"
                    }
                  }
                }
              }
            }
          },
          "404": { "description": "Not found" },
          "500": { "description": "Internal server error" }
        }
      }
    },
    "/launches/next": {
      "get": {
        "tags": ["Launches"],
        "summary": "Get the next launch",
        "description": "This endpoint is used to get the next launch",
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Launch"
                }
              }
            }
          }
        }
      }
    },
    "/launches/latest": {
      "get": {
        "tags": ["Launches"],
        "summary": "Get the latest launch",
        "description": "This endpoint is used to get the latest launch",
        "responses": {
          "201": {
            "description": "Success",
            "content": {
              "application/json": {
                "schema": {
                  "$ref": "#/components/schemas/Launch"
                }
              }
            }
          }
        }
      }
    }
  },
  "components": {
    "schemas": {
      "Launch": {
        "type": "object",
        "properties": {
          "flight_number": {
            "type": "number"
          },
          "name": {
            "type": "string"
          },
          "date_utc": {
            "type": "string"
          },
          "date_unix": {
            "type": "number"
          },
          "date_local": {
            "type": "string"
          },
          "date_precision": {
            "type": "string",
            "enum": ["half", "quarter", "year", "month", "day", "hour"]
          },
          "static_fire_date_utc": {
            "type": "string"
          },
          "static_fire_date_unix": {
            "type": "number"
          },
          "tdb": {
            "type": "boolean"
          },
          "net": {
            "type": "boolean"
          },
          "window": {
            "type": "number"
          },
          "rocket": {
            "type": "string"
          },
          "success": {
            "type": "boolean"
          },
          "failures": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "time": {
                  "type": "number"
                },
                "altitude": {
                  "type": "number"
                },
                "reason": {
                  "type": "string"
                }
              }
            }
          },
          "upcoming": {
            "type": "boolean"
          },
          "details": {
            "type": "string"
          },
          "fairings": {
            "type": "object",
            "properties": {
              "reused": {
                "type": "boolean"
              },
              "recovery_attempt": {
                "type": "boolean"
              },
              "recovered": {
                "type": "boolean"
              },
              "ships": {
                "type": "array",
                "items": {
                  "type": "string"
                }
              }
            }
          },
          "crew": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "crew": {
                  "type": "string"
                },
                "role": {
                  "type": "string"
                }
              }
            }
          },
          "ships": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "capsules": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "payloads": {
            "type": "array",
            "items": {
              "type": "string"
            }
          },
          "launchpad": {
            "type": "string"
          },
          "cores": {
            "type": "array",
            "items": {
              "type": "object",
              "properties": {
                "core": {
                  "type": "string"
                },
                "flight": {
                  "type": "number"
                },
                "gridfins": {
                  "type": "boolean"
                },
                "legs": {
                  "type": "boolean"
                },
                "reused": {
                  "type": "boolean"
                },
                "landing_attempt": {
                  "type": "boolean"
                },
                "landing_success": {
                  "type": "boolean"
                },
                "landing_type": {
                  "type": "string"
                },
                "landpad": {
                  "type": "string"
                }
              }
            }
          },
          "links": {
            "type": "object",
            "properties": {
              "patch": {
                "type": "object",
                "properties": {
                  "small": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  },
                  "large": {
                    "type": "array",
                    "items": {
                      "type": "string"
                    }
                  }
                }
              },
              "presskit": {
                "type": "string"
              },
              "webcast": {
                "type": "string"
              },
              "youtube_id": {
                "type": "string"
              },
              "article": {
                "type": "string"
              },
              "wikipedia": {
                "type": "string"
              }
            }
          },
          "auto_update": {
            "type": "boolean"
          }
        }
      }
    }
  }
}
